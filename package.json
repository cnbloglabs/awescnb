{
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.17.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "node scripts/dev-theme.js",
    "build:pkg": "pnpm -r --filter=./packages/** --parallel run build",
    "docs:dev": "pnpm -C docs run dev",
    "docs:build": "pnpm run --filter {./docs}... build && pnpm demo:build",
    "typecheck": "vue-tsc --noEmit",
    "release": "bumpp package.json packages/*/package.json docs/package.json --all -x \"zx scripts/update-versions.mjs\"",
    "test": "vitest test",
    "lint": "pnpm exec biome check --write",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@acnb/vite-plugin-serve-shared-assets": "workspace:*",
    "@biomejs/biome": "catalog:",
    "@clack/prompts": "catalog:",
    "@types/node": "catalog:",
    "bumpp": "catalog:",
    "lint-staged": "catalog:",
    "picocolors": "catalog:",
    "simple-git-hooks": "catalog:",
    "taze": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "**/*.{js,ts,vue,json}": [
      "biome check --write"
    ],
    "**/*.min.js": []
  }
}
