{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "preserve",
    "lib": ["DOM", "ESNext"],
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "types": [
      "vite",
      "vite/client",
      "node"
    ],
    "allowImportingTsExtensions": true,
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "./*.ts",
    "./docs/**/*.ts",
    "./packages/**/*.ts",
    "./themes/**/*.ts",
    "./test/**/*.ts",
    "packages/plugins/vite.config.mts",
    "packages/stylelint-one-utility-class-per-line/src/utils.mjs",
    "packages/stylelint-one-utility-class-per-line/src/index.mts",
    "themes/scribe/src/modules/demo/index.tsx",
    "themes/scribe/src/modules/back-to-top/index.tsx",
    "themes/scribe/src/plugins/top-nav-bar/index.tsx"
  ],
  "exclude": ["**/dist/**", "**/node_modules/**"]
}
